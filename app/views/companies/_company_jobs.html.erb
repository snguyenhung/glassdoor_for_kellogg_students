<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Jobs

    <a data-toggle="collapse" href="#company_jobs_new_form">
      Add job
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.jobs.each do |job| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to job, job %>

        <%= link_to job, method: :delete, data: { confirm: "Do you really want to delete this job" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_jobs_new_form">
        <%= render partial: "companies/company_jobs_new_form" %>
      </div>
    </div>

  </ul>
</div>
