<% was_validated = student_profile.errors.any? %>

<%= form_with(model: student_profile, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% program_class = "form-control" %>
    <% program_was_invalid = student_profile.errors.include?(:program) %>

    <% if was_validated %>
      <% if program_was_invalid %>
        <% program_class << " is-invalid" %>
      <% else %>
        <% program_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :program %>
    <%= f.text_field :program, class: program_class, placeholder: "Enter program" %>
    <% if program_was_invalid %>
      <% student_profile.errors.full_messages_for(:program).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% graduation_year_class = "form-control" %>
    <% graduation_year_was_invalid = student_profile.errors.include?(:graduation_year) %>

    <% if was_validated %>
      <% if graduation_year_was_invalid %>
        <% graduation_year_class << " is-invalid" %>
      <% else %>
        <% graduation_year_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :graduation_year %>
    <%= f.date_select :graduation_year, class: graduation_year_class, placeholder: "Enter graduation year" %>
    <% if graduation_year_was_invalid %>
      <% student_profile.errors.full_messages_for(:graduation_year).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
